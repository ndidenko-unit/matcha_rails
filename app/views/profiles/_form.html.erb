<div class="login-form">
  <%= form_with(model: profile, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :age %>
        <%= form.text_field :age, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :gender %>
        <%= form.text_field :gender, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :sex_preferences %>
        <%= form.text_field :sex_preferences, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :tags %>
        <%= form.text_field :tags, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :bio %>
        <%= form.text_area :bio, size: "30x10", class: 'form-control' %>
      </div>
      <% form.hidden_field :user_id, value: current_user.id %>
    <% if profile.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

        <ul>
        <% profile.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="actions">
      <%= form.submit "Save", class: 'btn btn-primary btn-block' %>
    </div>
  <% end %>
</div>